<div class="title-create">
  <h4>Créer un évènement <i class="fa-regular fa-compass"></i></h4>

</div>

<div class="container-heba form-color" data-controller="toggle-maxpeople">
  <%= simple_form_for @event, class: "form-content" do |f| %>
    <div class="top-space">
      <%= f.input :name, label: "Nom" %>
    </div>
      <%= f.input :description, label: "Description" %>
      <%= f.input :address, label: "Adresse" %>
      <%= f.input :start_date,
        as: :string,
        label: "Date de début",
        input_html: { data: { controller: "datepicker" } }%>
      <%= f.input :end_date,
        as: :string,
        label: "Date de fin",
        input_html: { data: { controller: "datepicker" } }%>
      <%= f.input :public , input_html:{ data: { action:"click->toggle-maxpeople#toggle" }}%>
      <%= f.input :max_people, label: "Maximum de participants", input_html: {value: '100', data: { toggle_maxpeople_target: "input"}}%>

      <div class="form-tags">
        <%= f.input :event_tag_ids,
          collection: Tag.all,
          as: :check_boxes,
          input_html: { class: "tag-selector" },
          item_wrapper_class: 'form-tags',
          required: true %>
      </div>

      <div class="submit-button-formulaire">
        <%= f.submit class: "submit-btn", value: "Créer" %>
      </div>
  <% end %>
</div>
